<h1>Create a new Pet</h1>

<form action='/pets' method="POST">
  <label for="pet_name">Name:</label>
  <input type="text" id="pet_name" name="pet[name]" />
  <label>Choose an existing owner:</label>
  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>">
      <%=owner.name%>
    </input>
  <% end %>
  <label>and/or add a new owner:</label>
  <input type="text" id="owner_name" name="owner[name]" />
  <input type="submit" id="create_pet" value="Create Pet" />
</form>