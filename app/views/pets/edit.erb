<h1>Update a new Pet</h1>
<form method="post" action="/pets/<%=@pet.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">  
<label for="pet_name">
  <input type="text" name="pet[name]" id ="pet_name"> </input>


  <label>Choose an Owner:</label>

 <label>Choose an existing Owner:</label>

  <br>

  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.id == owner.id  %>><%=owner.name%></input>
  <%end%>

  <br>

  <label>or, create a new Owner:</label>
  <br>
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br>
  <input type="submit" value="Update Pet">
  </form>